"Make it look cool
set guifont=Monaco:h14

"Command [0-9] tab switching
noremap <D-1> 1gt
noremap <D-2> 2gt
noremap <D-3> 3gt
noremap <D-4> 4gt
noremap <D-5> 5gt
noremap <D-6> 6gt
noremap <D-7> 7gt
noremap <D-8> 8gt
noremap <D-9> 9gt
noremap <D-0> 10gt
noremap <D-S-right> gt
noremap <D-S-left> gT

set guitablabel=%M%N:\ %t

highlight Directory NONE
highlight Directory term=bold ctermfg=DarkBlue guifg=DodgerBlue3

"Remove toolbar
set guioptions-=T

