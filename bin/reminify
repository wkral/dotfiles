#!/bin/bash

export CLOSURE_COMPILER=~/Development/compiler-latest/compiler.jar

reminify_path=~/Development/reminify/reminify
pidfile=$reminify_path.pid
if [ -e $pidfile ]
then
    pid=`cat $pidfile`
    kill $pid 2>/dev/null
    rm $pidfile
    echo "Restarting reminify"
fi

js_path=~/Development/kinjoe/ryzoe/public/js
args="$js_path/jquery/jquery.stylish-select.js
      $js_path/jquery/jquery.autocomplete_geomod.js
      $js_path/jquery/jquery.geo_autocomplete.js
      $js_path/jquery/autoresize.jquery.js
      $js_path/jquery/jquery.showLoading.min.js
      $js_path/jquery/jquery.placeholder.js
      $js_path/jquery/jquery.endlessScroll.js
      $js_path/jquery/jquery.validate.min.js
      $js_path/jquery/slimbox2.js
      $js_path/webtoolkit.aim.js
      $js_path/jquery.ryzoe.js
      $js_path/ryzoe.js
      $js_path/utils.js
      $js_path/address.js
      $js_path/join.js
      $js_path/password.js
      $js_path/image-attach.js
      $js_path/messages.js
      $js_path/events.js
      $js_path/polls.js
      $js_path/profile-settings.js
      $js_path/account-settings.js
      $js_path/comm-panel.js
      $js_path/frontporch.js
      $js_path/neighbours.js"

python $reminify_path.py $args >$reminify_path.log 2>$reminify_path.err &
echo $! >$pidfile
