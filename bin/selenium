#!/bin/bash

selenium=~/Development/selenium

pidfile=$selenium/selenium.pid
if [ -e $pidfile ]
then
    pid=`cat $pidfile`
    kill $pid 2>/dev/null
    rm $pidfile
    echo "Killed running selenium server"
fi

if [ "$1" != "stop" ]
then
    echo "Starting selenium server"
    java -jar $selenium/selenium-server-1.0.1.jar -firefoxProfileTemplate $selenium/i4532ntu.SeleniumUser -browserSessionReuse -userExtensions $selenium/user-extensions.js >$selenium/selenium.log &
    echo $! >$pidfile
fi

